{
  "manifest_version": 3,
  "name": "Tab Group Organizer",
  "version": "1.0",
  "description": "Automatically group your Chrome tabs by domain and tidy inactive ones.",
  "permissions": ["tabs", "tabGroups", "storage"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}